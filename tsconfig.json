        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "baseUrl": ".",
        "allowJs": true
    },
    "include": [
      "node_modules/web3-typescript-typings/index.d.ts",
      "node_modules/types-ethereumjs-util/index.d.ts",
