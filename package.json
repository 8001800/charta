{
  "name": "charta",
  "version": "0.0.0",
  "description": "New & improved smart contracts for Dharma protocol",
  "main": "index.js",
  "scripts": {
    "transpile": "rm -rf ./transpiled; copyfiles ./build/**/* ./transpiled; tsc",
    "lint-ts": "tslint migrations/*.ts test/**/*.ts",
    "lint-sol": "solhint contracts/*.sol contracts/**/*.sol",
    "lint": "npm run lint-ts; npm run lint-sol",
    "compile": "rm -rf build/contracts; truffle compile",
    "migrate": "npm run transpile; truffle migrate",
    "test": "npm run transpile; truffle test",
    "testrpc": "testrpc --networkId 50",
    "validate": "npm ls"
  },
  "repository": "git@github.com:dharmaprotocol/charta.git",
  "author": "Nadav Hollander <nadav@dharma.io>",
  "license": "ISC",
  "dependencies": {
    "bignumber.js": "^4.1.0",
    "solhint": "^1.1.8",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "web3": "0.19.0",
    "@types/bignumber.js": "^4.0.3",
    "@types/chai": "^4.0.5",
    "@types/chai-as-promised": "^7.1.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "copyfiles": "^1.2.0",
    "web3-typescript-typings": "^0.7.2"
  },
  "pre-commit": [
    "lint"
  ]
}
